<Window x:Class="NBDGenealogy.Views.StartView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NBDGenealogy.Views"
        mc:Ignorable="d"
        Title="StartView" Height="250" Width="600" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Button x:Name="OpenAddPerson" Grid.Column="1" Grid.Row="1" Margin="5" Background="LightSteelBlue"><TextBlock FontSize="16" TextWrapping="Wrap" TextAlignment="Center">Dodaj osobę</TextBlock></Button>
        <Button Grid.Column="2" Grid.Row="1" Margin="5" Background="LightSteelBlue"><TextBlock FontSize="16" TextWrapping="Wrap" TextAlignment="Center">Usuń osobę</TextBlock></Button>
        <Button Grid.Column="3" Grid.Row="1" Margin="5" Background="LightSteelBlue"><TextBlock FontSize="16" TextWrapping="Wrap" TextAlignment="Center">Modyfikuj osobę</TextBlock></Button>
        <Button Grid.Column="4" Grid.Row="1" Margin="5" Background="LightSteelBlue"><TextBlock FontSize="16" TextWrapping="Wrap" TextAlignment="Center">Pokaż potomków osoby</TextBlock></Button>
        <Button Grid.Column="1" Grid.Row="2" Margin="5" Background="LightSteelBlue"><TextBlock FontSize="16" TextWrapping="Wrap" TextAlignment="Center">Pokaż wspólnych przodków</TextBlock></Button>
        <Button Grid.Column="2" Grid.Row="2" Margin="5" Background="LightSteelBlue"><TextBlock FontSize="16" TextWrapping="Wrap" TextAlignment="Center">Usuń związek rodzic-dziecko</TextBlock></Button>
        <Button Grid.Column="3" Grid.Row="2" Margin="5" Background="LightSteelBlue"><TextBlock FontSize="16" TextWrapping="Wrap" TextAlignment="Center">Usuń związek dziecko-rodzic</TextBlock></Button>
        <Button Grid.Column="4" Grid.Row="2" Margin="5" Background="LightSteelBlue"><TextBlock FontSize="16" TextWrapping="Wrap" TextAlignment="Center">Pokaż spadkobierców</TextBlock></Button>
    </Grid>
</Window>
